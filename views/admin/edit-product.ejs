<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    
</head>
<body>
    <%- include('../includes/navigation.ejs') -%>
    <main>
        <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% }else { %>add-product<%  } %>" method="POST">
            <div class="form-controll">
                <label for="titleInput">Title</label>
                <input type="text" name="title" id="titleInput" value="<% if(editing) { %><%= product.title %><% } %>">
            </div>
            <div class="form-controll">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing) { %><%= product.imageUrl %><% } %>">
            </div>
            <div class="form-controll">
                <label for="priceInput">Price</label>
                <input type="number" name="price" id="priceInput" step="0.01" value="<% if(editing) { %><%= product.price %><% } %>">
            </div>
            <div class="form-controll">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><% if(editing) { %><%= product.description %><% }%></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" name="productId" value="<%= product.id %>">
            <% } %>
            
            
            <button class="btn" type="submit">
                <% if(editing) { %>Update Product<% }else { %>Add Product<%  } %>  
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>